<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="1"
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_icon_doctor"
        android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:layout_weight="0.1"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:text="@string/str_text1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_two"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_one">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_medical_centre"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:layout_weight="0.9"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:text="@string/str_text2"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_two">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_labmeds"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:text="@string/str_text1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>